pipeline {
    agent any
environment {
    PATH = "$PATH:${getTerraformPath()}"
}
    stages {
        stage('Terraform-Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform-destroy') {
            steps {
                sh 'terraform destroy --auto-approve'
            }
        }
    }
}

def getTerraformPath(){
    def tfHome= tool name: 'terraform-server', type: 'terraform'
    return tfHome
}
